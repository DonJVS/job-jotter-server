{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 6,
      "maxLength": 100
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "isAdmin": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": ["username", "password", "email", "firstName", "lastName"]
}

